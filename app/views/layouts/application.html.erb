<!DOCTYPE html>
<html>
  <head>
    <title>Project1</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag    'application', media: 'all' %>
    <%= javascript_include_tag 'application' %>
     <%= cloudinary_js_config %>
  </head>

  <body>
    <h1 class="title">Inspirational Quotes</h1>
    <div class="topnav">
    <%= link_to 'Home', quotations_path %>
      <% if @current_user.present? %>
      <%= link_to 'Welcome ' +  @current_user.name, user_path(@current_user), class: "active"%>
      |
      <%= link_to 'Create New Quotations',new_quotation_path, class: "middle"%>
      |
      <%= link_to 'See All Quotations', quotations_path, class: "middle" %>
      |
      <div class="topnav-right">
      <%= link_to 'Logout', login_path, method: 'delete' %>
      <% else %>
      <div class="topnav-right-right">
      <%= link_to 'Login', login_path %>
      |
      <%= link_to 'Sign up', new_user_path %>
      <% end %>
      </div>
      </div>
      </div>
  </div>


  <%= yield %>

  </body>
</html>
